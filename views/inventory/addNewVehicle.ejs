<!-- title as h1 -->
 <% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) {%>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<div class="containerRegister">
  <form action="/inv/add-vehicle" method="post" class="loginRegister">
    <fieldset >
      <legend>Add New Vehicle</legend>
        <label class="regLabel">Classification *</label>
        <%- classificationList %>
        <label class="regLabel">Make * <input type="text" id="inv_make" name="inv_make" required pattern="^[A-Za-zÁÉÍÓÚáéíóúñÑ\s]+$" value="<%= locals.inv_make %>"></label>
        <label class="regLabel">Model * <input type="text" id="inv_model" name="inv_model" required minlength="3" placeholder="3 characters" value="<%= locals.inv_model %>"></label>
        <label class="regLabel">Description * <textarea id="inv_description" name="inv_description" required></textarea></label>
        <label class="regLabel">Imagen Path * <input type="text" id="inv_image" name="inv_image" required placeholder="/images/vehicle.jpg" value="<%= locals.inv_image %>"></label>
        <label class="regLabel">Thumbnail Path * <input type="text" id="inv_thumbnail" name="inv_thumbnail" required placeholder="/images/vehicle.jpg" value="<%= locals.inv_thumbnail %>"></label>
        <label class="regLabel">Price * <input type="number" id="inv_price" name="inv_price" required step="0.01" value="<%= locals.inv_price %>"></label>
        <label class="regLabel">Year * <input type="number" id="inv_year" name="inv_year" required min="1900" max="2099" value="<%= locals.inv_year %>"></label>
        <label class="regLabel">Miles * <input type="number" id="inv_miles" name="inv_miles" required min="0" value="<%= locals.inv_miles %>"></label>
        <label class="regLabel">Color * <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>"></label>
    
      
      
    </fieldset>
      
      <button type="submit" class="button">Add Vehicle</button>
      
    
  </form>

  
</div> 